<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>REST API docs</title>

    {% block stylesheet %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Source+Code+Pro:300,600|Titillium+Web:400,600,700">
        <link rel="stylesheet" href="{{ asset('bundles/swagger/swagger-ui/swagger-ui.css') }}">
    {% endblock %}
    
    {# json_encode(65) is for JSON_UNESCAPED_SLASHES|JSON_HEX_TAG to avoid JS XSS #}
    <script id="swagger-data" type="application/json">{{ swagger_data|json_encode(65)|raw }}</script>

    <style>
        html
        {
            box-sizing: border-box;
            overflow: -moz-scrollbars-vertical;
            overflow-y: scroll;
        }

        *,
        *:before,
        *:after
        {
            box-sizing: inherit;
        }

        body
        {
            margin:0;
            background: #fafafa;
        }
    </style>
</head>

<body>

<div id="swagger-ui" class="api-platform"></div>

<script src="{{ asset('bundles/swagger/swagger-ui/swagger-ui-bundle.js') }}"></script>
<script src="{{ asset('bundles/swagger/swagger-ui/swagger-ui-standalone-preset.js') }}"></script>
<script>
    window.onload = function() {
        const data = JSON.parse(document.getElementById('swagger-data').innerText);
        // Begin Swagger UI call region
        const ui = SwaggerUIBundle({
            spec: data,
            dom_id: '#swagger-ui',
            validatorUrl: null,
            presets: [
                SwaggerUIBundle.presets.apis,
                SwaggerUIStandalonePreset
            ],
            plugins: [
                SwaggerUIBundle.plugins.DownloadUrl
            ],
            layout: "StandaloneLayout"
        });

        // End Swagger UI call region
        window.ui = ui
    }
</script>

</body>
</html>
